{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"module": "es6",

		"target": "es5",

		"jsx": "react",
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"sourceMap": true,

		"moduleResolution": "node"
	},
	"include": ["./src/**/*"],
	"exclude": [
		"node_modules",
		"webpack.config.js",
		"../back-end",
		"./src/stories/*"
	],
	"awesomeTypescriptLoaderOptions": {
		"reportFiles": ["./src/**/*"],
		"checkjs": true
	}
}
