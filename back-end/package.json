{
	"name": "botsea-back-end",
	"version": "1.0.0",
	"description": "The back-end for BotSea",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/BotSeaio/BotSea.git"
	},
	"scripts": {
		"start": "tsc && node dist/app.js",
		"build": "tsc",
		"postinstall": "npm run build",
		"build-client": "cd ../front-end/ && npm run build && cp -r build ../back-end/client",
		"buildall": "npm run build && npm run build-client",
		"test": "jest --rootDir=./src --watch",
		"test:e2e": "jest --rootDir=./__tests__/src/e2e --runInBand --detectOpenHandles --forceExit",
		"lint": "eslint \"src/**\""
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"verbose": true
	},
	"dependencies": {
		"argon2": "^0.27.2",
		"axios": "^0.21.1",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"ccxt": "^1.41.64",
		"child_process": "^1.0.2",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"debug": "^4.3.1",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-jwt": "^6.0.0",
		"express-validator": "^6.10.0",
		"express-winston": "^4.1.0",
		"jsonwebtoken": "^8.5.1",
		"log4js": "^6.3.0",
		"moment": "^2.29.1",
		"mongodb": "^3.6.5",
		"mongoose": "^5.12.2",
		"node": "^15.10.0",
		"rootpath": "^0.1.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.10",
		"@types/debug": "^4.1.5",
		"@types/express": "^4.17.11",
		"@types/express-jwt": "^6.0.0",
		"@types/faker": "^5.5.1",
		"@types/jest": "^26.0.22",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/node": "^14.14.37",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"eslint": "^7.23.0",
		"eslint-plugin-jest": "^24.3.3",
		"eslint-plugin-react": "^7.23.1",
		"faker": "^5.5.3",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"mongodb-memory-server": "^6.9.6",
		"nodemon": "^2.0.7",
		"source-map-support": "^0.5.19",
		"ts-jest": "^26.5.4",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.3"
	}
}
